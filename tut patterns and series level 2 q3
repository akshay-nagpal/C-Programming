#include <iostream>
using namespace std;
int main()
{
    int n,i,count1,count=1,max,tmp,k,j;
    cin>>n;
    max=n*n+1;
    tmp=max;
    for(i=0,j=n;i<n;i++,j--)
    {
        for(int m=2*i;m>=0;m--) cout<<" ";
        count1=count-i-1;
        //cout<<"value of count ="<<count1<<"\n";
        for(k=0;k<j;k++)
        {
            cout<<count<<"*";
            count++;
        }
        if(i==0)
        {
            for(k=0;k<n;k++,tmp++)
            {
                if(k<n-1)
                cout<<tmp<<"*";
                else cout<<tmp;
            }
        }
        else
        {
            tmp=max-count1;
            //cout<<"value of tmp= "<<tmp<<"\n";
            for(k=0;k<j;k++,tmp++)
            {
                if(k<j-1)
                cout<<tmp<<"*";
                else cout<<tmp;
            }
        }
        cout<<"\n";
        
    }
}
